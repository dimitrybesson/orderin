<h3 class="page-heading">Restaurant Dashboard</h3>
<div class="user-filter-options">
  <div class="restaurant-block">
    <h2>Restaurants</h2>
    <div class="user-restaurants">
      <%= render @restaurants %>
    </div>
  </div>

  <div class="supplier-block">
    <h2>Suppliers</h2>
    <div class="user-suppliers">
    </div>
  </div>
</div>

<div class="quick-order-form">

  <%= form_for @order do |f| %>
    <div class="field">
      <%= f.hidden_field :restaurant_id %>
    </div>
    <div class="field">
      <%= f.hidden_field :supplier_id %>
    </div>
    <div class="field">
      <%= f.hidden_field :user_id, value: @user.id %>
    </div>
    <div class="action">
      <%= f.submit "Place Order", class: "place-order" %>
    </div>
  <% end %>

</div>


<div class="order-block">
  <h2>Orders</h2>
  <div class="orders-collection">
  </div>
</div>
