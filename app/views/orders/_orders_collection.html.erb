<% @orders.each do |order| %>
  <div class="order-display">
    <p>
      <%= link_to "Order ID: #{order.id}", order_path(order) %>
      <span class="order-status">
        <% if order.completed? %>
          Completed!
        <% else %>
          <% if order.seen? %>
            Seen!
          <% end %>
          <% if order.invoiced? %>
            Invoiced!
          <% end %>
          <% if order.shipped? %>
            Shipped!
          <% end %>
          <% if order.received? %>
            Received!
          <% end %>
          <% if order.paid? %>
            Paid!
          <% end %>
        <% end %>
      </span>
    </p>
    <p> Restaurant: <%= order.restaurant.name %></p>
    <p> Supplier: <%= link_to order.supplier.name, supplier_path(order.supplier) %></p>
    <p> Delivery Date: <%= order.delivery_date.to_date.strftime("%a, %b %d, %Y") %></p>
    <p> Total: $<%= order.formatted_total %></p>
  </div>
<% end %>
