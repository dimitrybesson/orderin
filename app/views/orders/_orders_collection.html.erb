<% @orders.each do |order| %>
  <div class="order-display">
    <p>
      <%= link_to "Order ID: #{order.id}", order_path(order) %>
      <span class="order-status">
        <% if order.completed? %>
          Completed!
        <% else %>
          <% if order.seen? %>
            <%= image_tag("eyeball.svg", class: "icon icon-eyeball", title: "Seen by supplier") %>
          <% end %>
          <% if order.invoiced? %>
            <%= image_tag("clipboard.svg", class: "icon icon-clipboard") %>
          <% end %>
          <% if order.shipped? %>
            <%= image_tag("truck.svg", class: "icon icon-truck") %>
          <% end %>
          <% if order.received? %>
            <%= image_tag("gift.svg", class: "icon icon-gift") %>
          <% end %>
          <% if order.paid? %>
            <%= image_tag("dollar.svg", class: "icon icon-dollar") %>
          <% end %>
        <% end %>
      </span>
    </p>
    <p> Restaurant: <%= order.restaurant.name %></p>
    <p> Supplier: <%= link_to order.supplier.name, supplier_path(order.supplier) %></p>
    <p> Delivery Date: <%= order.delivery_date.to_date.strftime("%a, %b %d, %Y") %></p>
    <p> Total: $<%= order.formatted_total %></p>
  </div>
<% end %>
