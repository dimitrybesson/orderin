<%= form_tag(items_path, method: :post, class: "new_item_and_inventory_item") do %>
  <div class="field">
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>

  <div class="field">
    <%= label_tag :description %>
    <%= text_area_tag :description %>
  </div>

  <div class="field">
    <%= label_tag :price %>
    <%= number_field_tag :price, nil, min: 0 %>
  </div>

  <div class="field">
    <%= label_tag :quantity %>
    <%= number_field_tag :quantity, nil, min: 0 %>
  </div>

  <%= hidden_field_tag :supplier_id, @supplier.id %>

  <div class="actions">
    <%= submit_tag %>
  </div>
<% end %>
