<h1><%= @supplier.name %></h1>
<h1>InventoryItems</h1>

<% if current_user.restaurant_worker? %>
  <%= form_for @order do |f| %>
    <div class="field">
       <%= f.hidden_field :supplier_id, value: @supplier.id %>
       <%= f.submit "Place Order" %>

    </div>
  <% end %>
<% end %>

<div class="inventory">
  <ul>
    <% @inventory_items.each do |inventory_item| %>
      <li>
        <%= inventory_item.item.name %>
        <%= inventory_item.quantity %>
        <%= inventory_item.formatted_price %>
        <% if current_user.suppliers.include?(@supplier) %>
          <%= link_to "Edit", edit_supplier_inventory_item_path(@supplier, inventory_item), class: "edit-inventory-item-btn" %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

<div class="edit-inventory-item-modal hidden">
</div>
