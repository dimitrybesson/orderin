<h2>Invoice#: <%= @invoice.id %></h2>
<h3>Order Ref#: <%= @order.id %></h3>

<%= form_tag(invoice_items_path, method: :patch) do %>
  <%= hidden_field_tag 'invoice', @invoice.id %>
  <% @invoice_items.each do |invoice_item| %>
    <div class="invoice-item">
      <%= invoice_item.order_item.name.capitalize %>
      <%= label_tag (:quantity) %>
      <%= number_field_tag invoice_item.id, invoice_item.quantity, min: 0, max: (invoice_item.quantity + invoice_item.order_item.inventory_item.quantity) %>
      <p>Ordered: <%= invoice_item.order_item.quantity %></p>
    </div>
  <% end %>
  <%= submit_tag("Submit") %>
<% end %>
